<h1> Listing students </h1>
<div>
  <%= link_to 'create student', new_student_path %> 
  <%= link_to 'back', departments_path %>
</div>
<table>
  <thead>
    <tr>
      <th class="text-right" width=10%> Name</th>
      <th class="text-right" width=40%> Email </th>
      <th class="text-right" width=10%> Roll number </th>
      <th class="text-right" width=10%> Date of birth </th>
      <th class="text-right" width=10%> contact </th>
      <th class="text-right" width=20%> Actions </th>
    </tr>
  </thead>
  <body>
    <% @students.each do |student| %>
      <tr>
        <td style="text-align:center"><%= student.name %></td>
        <td style="text-align:center"><%= student.email %></td>
        <td style="text-align:center"><%= student.roll_number %></td>
        <td style="text-align:center"><%= student.dob %></td>
        <td style="text-align:center"><%= student.contact %></td>
        <td style="text-align:center">
          <%= link_to 'View', student_path(student) %>
          <%= link_to 'Edit', edit_student_path(student) %>
          <%= link_to 'Destroy', student, method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
        <td>
      </tr>
    <% end %>
  </body>
</table>